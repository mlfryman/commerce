doctype html
html
  head
    meta(charset='utf-8')
    title Your items
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 eCommerce Warehouse
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') FAQ
        li: a(href='/items/new') Add Item
        li: a(href='/items') View Current Items
      h2 Item Selection

    table
      thead
        tr
          th Name
          th Length
          th Width
          th Height
          th Weight
          th Color
          th Quantity
          th MSRP
          th % Off
          th Cost
      tbody
        each item in items
          tr.item(style='background-color: white;')
            td= item.name
            td #{item.dimensions.l} x #{item.dimensions.w} x #{item.dimensions.h}
            td= item.weight
            td(style="background-color: #{item.color}")
            td= item.quantity
            td= item.msrp
            td= item.percentOff
            td= item.cost()
      form(method='post', action='/items/#{item._id}/delete')
        button Delete Item
