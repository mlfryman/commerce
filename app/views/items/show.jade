doctype html
html
  head
    meta(charset='utf-8')
    title Your items
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 eCommerce Warehouse
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') FAQ
        li: a(href='/items/new') Add Item
        li: a(href='/items') View Current Items
    h2 item.name
